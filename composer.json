{
    "name": "marekskopal/orm",
    "type": "library",
    "description": "ORM",
    "keywords": [
        "orm",
        "sql",
        "mysql",
        "sqlite",
        "query-builder",
        "data-mapper"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Marek Skopal",
            "homepage": "https://www.marekskopal.cz"
        }
    ],
    "require": {
        "php": ">=8.4",
        "ext-pdo": "*",
        "ramsey/uuid": "^4.7",
        "nette/utils": "^4.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.0",
        "phpstan/extension-installer": "^1.4",
        "phpunit/phpunit": "^12.0",
        "slevomat/coding-standard": "^8.15",
        "phpstan/phpstan-strict-rules": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "MarekSkopal\\ORM\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MarekSkopal\\ORM\\Tests\\": [
                "tests/"
            ]
        }
    },
    "config": {
        "platform": {
            "php": "8.4"
        },
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "php-http/discovery": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
